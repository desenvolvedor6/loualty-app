<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/itemLayoutFoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:contentDescription="@string/imageClientDescription"
        android:src="@drawable/ic_no_image" />

    <TextView
        android:id="@+id/itemLayoutNome"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/itemLayoutFoto"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/texto"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/valueTotalText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/itemLayoutNome"
        android:layout_gravity="center_horizontal"
        android:text="@string/valueTotal" />

    <TextView
        android:id="@+id/valueTotal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/valueTotalText"
        android:layout_gravity="center_horizontal" />

</LinearLayout>